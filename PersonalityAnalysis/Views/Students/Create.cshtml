@model PersonalityAnalysis.Models.ViewModels.CreateStudentViewModel

@{
    ViewBag.Title = "問卷流程1";
}

<h2>@ViewBag.Title</h2>

<div class="row">

<div class="p-3 col-12 col-md-10" >

    <p class="alert alert-success " role="alert">
        沒有小角色，只有小演員，扮演好角色，就是最佳的演員，沒有最好的職業，只有最適合您的職業，適在工作、全力以赴！
    </p>
</div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="">
        <h4>基本資料</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Hidden("Lecture_Key", (object)ViewBag.Lecture_Key.ToString())
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Compeny, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Compeny, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Compeny, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Employee_ID, htmlAttributes: new { @class = "control-label col-md-2" })
